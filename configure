#!/usr/bin/env sh

simplify () {
  local name=$1
  local ifs=$IFS
  IFS="."
  set -- ${name}
  version="$1.$2"
  IFS=${ifs}
}

copy () {
for dir in lib full; do 
	if [ -d "$1/${dir}" ]; then
		cp -R $1/${dir}/ .; 
	fi done
}

simplify `ocaml -vnum`;
copy "current";
if [ -d "${version}" ]; then
	copy "${version}"
fi
